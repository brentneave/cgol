{
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "lib": ["es2018", "dom"],
    "paths": {
      "/*": ["src/*"],
    },
    "plugins": [
      { // See https://github.com/mrmckeb/typescript-plugin-css-modules for more options
        "name": "typescript-plugin-css-modules",
        "options": {
          "classnameTransform": "camelCaseOnly",
          "customMatcher": "\\.(c|le|sa|sc)ss$"
        }
      }
    ]
  },
  "include": [
    "index.d.ts",
    "src/**/*"
  ],
  "exclude": ["node_modules", "dist", ".cache"]
}
